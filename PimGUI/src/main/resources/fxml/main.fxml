<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import vn.elca.training.factory.CheckBoxTableCellFactory?>
<GridPane
        alignment="BASELINE_CENTER" hgap="10" prefWidth="900" prefHeight="700" vgap="10" xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="vn.elca.training.controller.MainController"
        stylesheets="/styles/main.css">
    <!--    top begin   -->
    <padding><Insets bottom="10" left="25" right="25" top="25" /></padding>
    <ImageView fitHeight="56" fitWidth="56" pickOnBounds="true" preserveRatio="true"
               GridPane.columnIndex="0" GridPane.columnSpan="1" GridPane.rowIndex="0">
        <Image url="@/images/logo_elca.png" />
    </ImageView>
    <Label text="PROJECT INFORMATION MANAGEMENT" GridPane.columnIndex="1" GridPane.columnSpan="4" GridPane.rowIndex="0" />

    <fx:include source="header.fxml" alignment="center" GridPane.columnIndex="11" GridPane.rowIndex="0" fx:id="header" />

    <!--    top end  -->

    <Separator GridPane.columnIndex="0" GridPane.columnSpan="20" GridPane.rowIndex="1" />

    <!--    menu left begin -->

    <GridPane GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="2" fx:id="left">
        <fx:include source="menu.fxml" />
    </GridPane>

    <!--    menu left end -->

    <Separator orientation="VERTICAL"  GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <!-- right begin -->

    <GridPane  hgap="10.0" vgap="30.0" GridPane.columnIndex="2" GridPane.columnSpan="10" GridPane.rowIndex="2" fx:id="right">
        <VBox spacing="30" id="projectListVBox">
            <Text styleClass="header" text="Project List" />
            <Separator valignment="BOTTOM" styleClass="separator-bottom"/>
            <HBox spacing="5">
                <TextField prefWidth="250" promptText="Project number, name, customer, name" fx:id="nameInp"/>
                <ComboBox fx:id="statusInp" promptText="Project status">
                </ComboBox>
                <Button text="Search Project" fx:id="searchBtn" onAction="#onSearchSubmit"/>
                <Button text="Reset Search" fx:id="resetBtn" onAction="#onResetSearch"/>
            </HBox>
            <TableView fx:id="projectTable">
                <columns>
                    <TableColumn fx:id="checkBoxColumn" styleClass="format-date">
                        <cellValueFactory>
                            <PropertyValueFactory property="select" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Number" fx:id="projectNumberColumn" styleClass="format-number">
                        <cellValueFactory>
                            <PropertyValueFactory property="projectNumber" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Name">
                        <cellValueFactory><PropertyValueFactory property="name" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Status">
                        <cellValueFactory>
                            <PropertyValueFactory property="status" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Customer">
                        <cellValueFactory>
                            <PropertyValueFactory property="customer" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Start Date" styleClass="format-date" fx:id="dateColumn">
                        <cellValueFactory>
                            <PropertyValueFactory property="startDate"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Delete">
                    </TableColumn>
                </columns>
            </TableView>
            <!--            <Pagination maxPageIndicatorCount="4" />-->
        </VBox>
    </GridPane>
    <!-- right end -->
</GridPane>
